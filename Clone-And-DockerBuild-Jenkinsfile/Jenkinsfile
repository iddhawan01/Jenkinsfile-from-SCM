pipeline {
    agent any

    stages {

        stage('Clone Repository') {
            steps {
                echo "ğŸ“¥ Cloning repository..."
                git branch: 'main', url: 'https://github.com/iddhawan01/Jenkinsfile-from-SCM.git'
                echo "âœ… Clone completed!"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "ğŸ³ Starting Docker Build..."
                    cd 03-Clone-And-DockerBuild-Jenkinsfile
                    docker build -t my-first-image .
                '''
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ Docker image built successfully (Use Case)"
        }
        failure {
            echo "âŒ Build failed â€” check logs."
        }
    }
}
